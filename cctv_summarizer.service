[Unit]
Description=CCTV Summarizer Service
After=network.target

[Service]
Type=simple
User=homeassistant
WorkingDirectory=/Users/igor/Projects/HomeAssistaint/scripts/ha-config/cctv_summarizer
ExecStart=/usr/bin/python3 /Users/igor/Projects/HomeAssistaint/scripts/ha-config/cctv_summarizer/cctv_summarizer.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
